<form id="new-page-improvement">
  <% if (!currentUser.get("logged_in")) {%>
  <label for="page-improvement-username"></label>
  <input id="page-improvement-username" type="text" name="improvement[username]" placeholder="Your name">
  <p id="username-error"></p>

  <label for="page-improvement-email"></label>
  <input id="page-improvement-email" type="text" name="improvement[email]" placeholder="Your email address">
  <p id="email-error"></p>

  <% }; %>

  <label for="page-improvement-content"></label>
  <textarea name="improvement[content]" id="page-improvement-content" placeholder="Suggest an improvement or correction to earn IQ"></textarea>
  <p id="content-error"></p>

  <span id="submit-page-improvement"></span>
</form>
<ul class="page-improvements">
  <% improvements.each(function(improvement) {%>
    <li class="page-improvement">
      <h9 class="username"><%= improvement.escape("username") %></h9>
      <small class="time"><%= improvement.escape("time_ago_posted") %></small>
      <p><%= improvement.escape("content") %></p>
    </li>
  <% }); %>
</ul>

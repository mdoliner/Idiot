<h3>Create Text</h3>
<small>PRIMARY TAG</small>
<p class="error" id="tag-error"></p>
<% genres.each(function (genre) {%>
  <label for="<%= genre.escape("name") %>"><%= genre.escape("name") %></label>
  <input id="<%= genre.escape("name") %>" type="radio" name="page[genre_id]" value="<%= genre.id %>">
<% }); %>
<label for="artist">By:</label>
<input type="text" id="artist">
<ul id="artist-search-results"></ul>
<p class="error" id="artist-error"></p>
<label for="title">Title:</label>
<input type="text" name="page[title]" id="title">
<p class="error" id="title-error"></p>
<label for="text">Text:</label>
<textarea name="page[text]" id="text"></textarea>
<p class="error" id="text-error"></p>
<button type="submit">Submit</button>

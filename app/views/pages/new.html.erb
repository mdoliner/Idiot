<h3>Create Text</h3>
<small>PRIMARY TAG</small>
<form action="<%= pages_url %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <% @genres.each do |genre| %>
    <label><%= genre.name %></label>
    <input type="radio" name="page[genre_id]" value="<%= genre.id %>">
  <% end %>
  <label for="artist">By:</label>
  <input type="text" name="page[artist_id]" id="artist">
  <label for="title">Title:</label>
  <input type="text" name="page[title]" id="title">
  <label for="text">Text:</label>
  <textarea name="page[text]" id="text"></textarea>

  <button type="submit">Submit</button>
</form>
